<%- include('../partials/header') %>

<form id="edit-form" action="/games/<%= game._id %>?_method=PUT" method="POST">
    <label>Title:</label>
    <input type="text" name="title" value="<%= game.title %>">
    <label>Release Date:</label>
    <input type="date" name="releaseDate" value="<%= game.releaseDate %>">
    <label>Company:</label>
    <input type="text" name="company" value="<%= game.company %>">
    <input type="submit" value="Edit Game">
  </form>

